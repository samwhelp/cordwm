#!/usr/bin/env bash


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH="$(cd -- "$(dirname -- "$0")" ; pwd)"
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Init / Cmd
##

cmd_var_init () {

	THE_CMD_VERSION='0.1'

	THE_CMD_DIR_PATH="$THE_BIN_DIR_PATH"

	if [ "none$THE_CMD_FILE_NAME" = 'none' ]; then
		THE_CMD_FILE_NAME="cordwm-app-ctrl"
	fi

	THE_CMD_FILE_PATH="$THE_CMD_DIR_PATH/$THE_CMD_FILE_NAME"

}

##
### Tail: Init / Cmd
################################################################################


################################################################################
### Head: Model / run_app
##

mod_app_run () {
	local app="$1"

	if ! is_command_exist "$app"; then

		return 0
	fi

	exec "$app" &

}


##
### Tail: Model / raise_or_run
################################################################################


################################################################################
### Head: SubCmd / raise_or_run
##

sub_run_run () {
	mod_app_run "$@"
}


##
### Tail: SubCmd / raise_or_run
################################################################################


################################################################################
### Head: Model / app / sakura
##

mod_app_run_sakura () {

	mod_app_run "sakura"

}


##
### Tail: Model / app / sakura
################################################################################


################################################################################
### Head: SubCmd / app / terminal
##

sub_run_run_terminal () {
	mod_app_run_sakura "$@"
}

##
### Tail: SubCmd / app / terminal
################################################################################




